<!DOCTYPE html>
<html>
  <head>
    <title>Sourcery</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice && user_signed_in? %>
      <%= react_component('NotificationWrapper', { message: notice, type: 'success' }) %>
    <% elsif alert && user_signed_in? %>
      <%= react_component('NotificationWrapper', { message: alert, type: 'danger' }) %>
    <% end %>
    
    <%=  render "layouts/#{user_signed_in? ? 'user_nav' : 'guest_nav'}" %>
    <%= yield %>
    
    
  </body>
</html>
