<% flash.each do |key, value| %>
    <% if key == "notice" || key == "success" %>
        $("#employees").notify("<%= value %>", "success", { position: "center" } );
        $('#modal').modal('hide');
        $("#employees").html("<%= j render partial: 'timelogs/employees', locals: { employees: @employees } %>")
    <% else %>
        <% value.each do |k, v| %>
            var m = "<%= k.to_s.gsub(/_/, ' ').capitalize! %> <%= v.to_s %>"
                
            $(".validate_" + "<%= k %>").notify(m, "error", { position: "bottom" } );
        <% end %>
    <% end %>
<% end %>

