<div class="row pt20 pb20">
    <div class="col-xs-10 col-lg-10 col-md-10 col-xs-offset-1 col-md-offset-1 col-lg-offset-1">
        <%= form_for inquiry, url: create_inquiry_path do |f| %>    
            <div class='row mb20'>              
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>First Name</label>
                    <%= f.text_field :first_name, class: "form-control", placeholder: "You first name" %>
                </div>

                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Last Name</label>
                    <%= f.text_field :last_name, class: "form-control", placeholder: "You last name" %>
                </div>
            </div>

            <div class='row mb20'>              
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Position in Company</label>
                    <%= f.text_field :position, class: "form-control", placeholder: "You current position in company" %>
                </div>
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Contact Number</label>
                    <%= f.text_field :contact_number, class: "form-control", placeholder: "You contact" %>
                </div>
                    
            </div>

            <div class='row mb20'>              
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Company Name</label>
                    <%= f.text_field :company_name, class: "form-control", placeholder: "Your Company" %>
                </div>

                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Industry</label>
                    <%= f.select :industry, industries, { include_blank: "Select nature of company" }, class: "form-control" %>
                </div>
            </div>

            <div class='row mb20'> 
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Email</label>
                    <%= f.email_field :email, class: "form-control", placeholder: "Email Address" %>                        
                </div>

                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <label class='panel-label'>Company Size</label>
                    <%= f.select :company_size, sizes, { include_blank: "Select estimated number of employees" }, class: "form-control" %>             
                </div>                          
            </div>

            <div class='row mb20'> 
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label class='panel-label'>How did you hear about us?</label>
                    <%= f.text_area :info_from, class: "form-control", placeholder: "Social Media? Or a friend?", rows: 2 %>                        
                </div>
            </div>

            <div class='row mb20'>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class='actions'>
                        <%= f.submit "Submit Inquiry", class: "btn btn-primary btn-signup" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>